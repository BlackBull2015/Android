<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button3" android:layout_row="1" android:layout_column="1"
            android:background="@drawable/up"
            android:onClick="forward"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button5" android:layout_row="1" android:layout_column="24"
            android:background="@drawable/up"
            android:onClick="up"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connect"
                android:id="@+id/button17" android:layout_row="0" android:layout_column="0"
                android:onClick="Connect"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Controls"
            android:id="@+id/textView" android:layout_row="0" android:layout_column="1"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Level"
            android:id="@+id/button7" android:layout_row="0" android:layout_column="22"
            android:onClick="level"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="test"
            android:id="@+id/button8" android:layout_row="0" android:layout_column="23"
            android:onClick="test"/>
    <Switch
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:text="On/Off"
            android:id="@+id/switch1" android:layout_row="0" android:layout_column="24" android:checked="false"
            android:onClick="switchonoff"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button" android:layout_row="2" android:layout_column="0"
            android:background="@drawable/left"
            android:onClick="left"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button2" android:layout_row="2" android:layout_column="2"
            android:background="@drawable/right"
            android:onClick="right"/>
    <TextView
            android:layout_width="149dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Leveling Control"
            android:id="@+id/textView2" android:layout_row="2" android:layout_column="24"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button4" android:layout_row="3" android:layout_column="1"
            android:background="@drawable/down"
            android:onClick="revers"/>
    <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/button6" android:layout_row="3" android:layout_column="24"
            android:background="@drawable/down"
            android:onClick="down"/>


</GridLayout>